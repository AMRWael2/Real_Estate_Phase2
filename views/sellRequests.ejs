            <!-- Sell Requests Table -->
            <div class="table-container">
                <table class="tabled">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Location</th>
                            <th>Images</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach(post => { %>
                            <tr>
                                <td><%= post.title %></td>
                                <td><%= post.description %></td>
                                <td><%= post.price %></td>
                                <td><%= post.location %></td>
                                <td>
                                    <% post.images.forEach(image => { %>
                                        <img src="<%= image %>" alt="Post Image" style="width: 100px; height: auto;">
                                    <% }) %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- =========== Scripts =========  -->
    <script>
        let list = document.querySelectorAll(".navigation li");

        function activeLink() {
            list.forEach((item) => {
                item.classList.remove("hovered");
            });
            this.classList.add("hovered");
        }

        list.forEach((item) => item.addEventListener("mouseover", activeLink));

        let toggle = document.querySelector(".toggle");
        let navigation = document.querySelector(".navigation");
        let main = document.querySelector(".main");

        toggle.onclick = function () {
            navigation.classList.toggle("active");
            main.classList.toggle("active");
        };

        document.querySelector(".tabled tbody").addEventListener("click", function(event) {
            if (event.target.tagName === "TD") {
                const selectedRow = event.target.parentElement;
                const selectedClass = "selected";
                const rows = document.querySelectorAll(".tabled tbody tr");

                for (const row of rows) {
                    if (row.classList.contains(selectedClass)) {
                        row.classList.remove(selectedClass);
                    }
                }

                selectedRow.classList.add(selectedClass);
            }
        });

        document.querySelector(".button-container .button:last-child").addEventListener("click", function() {
            const rows = document.querySelectorAll(".tabled tbody tr");
            let selectedRow = null;
            for (const row of rows) {
                if (row.classList.contains("selected")) {
                    selectedRow = row;
                    break;
                }
            }
            if (selectedRow) {
                if (confirm("Are you sure you want to delete this order?")) {
                    const rows = document.querySelectorAll(".tabled tbody tr");
                    const selectedRowIndex = Array.from(rows).indexOf(selectedRow);
                    selectedRow.remove();
                }
            }
        });
    </script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
